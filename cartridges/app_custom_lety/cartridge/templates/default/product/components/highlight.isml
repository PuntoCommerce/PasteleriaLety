<isif condition="${product.promotions.length > 0}">
  <div class="highlight">
    <isloop items="${product.promotions}" var="promotion" status="loopstatus">
      <isprint value="${promotion.calloutMsg}" encoding="off" />
    </isloop>
  </div>
</isif>
<isif condition="${product.attributes}">
  <isif condition="${product.attributes.numerodepersonas}">
    <div class="highlight highlight--black d-flex justify-content-center align-items-center p-1">
    <div  class="highlight--container" >
      <span>${product.attributes.numerodepersonas}</span>
    </div>
    </div>
    
  </isif>
</isif>